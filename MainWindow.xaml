<Window x:Class="DrakeBinary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrakeBinary"
        mc:Ignorable="d"
        Title="Drake Binary" Height="350" Width="525">
    <Grid>
        <Label Content="Enter text to be converted" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="inputTB" HorizontalAlignment="Stretch" Height="Auto" Margin="10,41,10,45" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch" Width="Auto"/>
        <Button Click="ConFromImage" Content="Convert from image" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="111"/>
        <Button Click="ConFromText" Content="Convert from Text" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="111"/>

    </Grid>
</Window>
